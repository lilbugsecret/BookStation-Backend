spring.application.name=BookStation

logging.level.org.datn.bookstation=DEBUG
logging.level.root=ERROR
logging.level.org.springframework.web=ERROR
logging.level.org.hibernate.SQL=ERROR
logging.level.org.springframework=ERROR
logging.level.org.springframework.web.servlet.DispatcherServlet=DEBUG

server.error.include-message=always
server.error.include-stacktrace=always

#logging.level.org.springframework.security=DEBUG
#spring.main.allow-bean-definition-overriding=true
#spring.autoconfigure.exclude=org.springframework.boot.autoconfigure.security.servlet.SecurityAutoConfiguration

spring.datasource.driverClassName=com.microsoft.sqlserver.jdbc.SQLServerDriver
spring.datasource.url=jdbc:sqlserver://localhost:1433;databaseName=BookStation;trustServerCertificate=true;integratedSecurity=false;
spring.datasource.username=${DB_USERNAME:sa}
spring.datasource.password=${DB_PASSWORD:your_password}

# C?u h�nh JPA/Hibernate
# spring.sql.init.mode=never - Kh�ng ch?y script SQL t? ??ng (data.sql, schema.sql)
spring.sql.init.mode=never

# spring.jpa.generate-ddl=false - Kh�ng t? ??ng t?o DDL (CREATE TABLE, etc.)
spring.jpa.generate-ddl=true

# spring.jpa.defer-datasource-initialization=false - Kh�ng tr� ho�n kh?i t?o datasource
spring.jpa.defer-datasource-initialization=true

# Hibernate DDL Auto - tạm thời dùng create-drop để force recreate tables với column size mới
spring.jpa.hibernate.ddl-auto=update

spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.SQLServerDialect


spring.jpa.properties.hibernate.hbm2ddl.create_namespaces=true

logging.pattern.console=${LOGPATTERN_CONSOLE:%green(%d{HH:mm:ss.SSS}) %yellow(%-5level) %red([%thread]) %blue(%logger{255}) - %msg%n}
logging.level.net.ttddyy.dsproxy.listener=debug
logging.level.org.hibernate.type=trace

# File upload configuration
spring.servlet.multipart.max-file-size=5MB
spring.servlet.multipart.max-request-size=25MB

# Upload configuration
upload.path=uploads/
upload.base-url=http://localhost:8080/uploads/

# JWT
jwt.secret=${JWT_SECRET:BookStation}
jwt.expiration=${JWT_EXPIRATION:86400000}


#cấu hình email
 spring.mail.host=smtp.gmail.com
  spring.mail.port=587
  spring.mail.username=${MAIL_USERNAME:your_email@gmail.com}
  spring.mail.password=${MAIL_PASSWORD:your_app_password}
  spring.mail.properties.mail.smtp.auth=true
  spring.mail.properties.mail.smtp.starttls.enable=true
  spring.mail.default-encoding=UTF-8

#cấu hình vnpay
vnpay.tmnCode=${VNPAY_TMN_CODE:YOUR_TMN_CODE}
vnpay.hashSecret=${VNPAY_HASH_SECRET:YOUR_HASH_SECRET}
vnpay.payUrl=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
vnpay.returnUrl=${VNPAY_RETURN_URL:http://localhost:8080/api/payment/vnpay-return}
vnpay.ipnUrl=${VNPAY_IPN_URL:http://localhost:8080/api/payment/vnpay-ipn}
